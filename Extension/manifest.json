{
  "manifest_version": 3,
  "name": "StockTracker",
  "version": "0.1.0",
  "description": "Stock tracker for HDAP",
   "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "offscreen"
  ],
   "host_permissions": [
    "https://b2b.hdap.ca/store/checkout*"
  ],
   "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://b2b.hdap.ca/store/checkout*"],
      "js": ["content.js"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'"
  }
}
