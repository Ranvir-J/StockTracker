{
  "manifest_version": 3,
  "name": "StockTracker",
  "version": "0.1.0",
  "description": "Stock tracker for HDAP",
   "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
   "host_permissions": [
    "https://www.hdap.ca/*"
  ],
   "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.hdap.ca/*"],
      "js": ["content.js"]
    }
  ]
}
